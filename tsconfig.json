{
    "compilerOptions": {
      "module": "commonjs",
      "target": "es2017",
      "strict": true,
      "jsx": "react", // Agrega esta línea
      "allowJs": true, // Permite archivos JS y JSX
      "noImplicitAny": true,
      "strictNullChecks": true,
      "strictFunctionTypes": true,
      "strictPropertyInitialization": true,
      "noImplicitThis": true,
      "alwaysStrict": true,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "experimentalDecorators": true,
      "emitDecoratorMetadata": true,
      "sourceMap": true,
      "outDir": "./dist",
      "baseUrl": "./",
      "incremental": true,
      "resolveJsonModule": true,
      "types": ["jest", "node"] // Agrega esta línea
    },
    "include": [
        "src",
        "declarations.d.ts" // Asegúrate de incluir este archivo
      ],
    "exclude": ["node_modules", "dist"]
  }
  